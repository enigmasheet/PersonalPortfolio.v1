<div class="project-card">
    <img src="@ImageUrl" alt="@Title" class="project-image" loading="lazy" />
    <h3 class="project-title">@Title</h3>
    <p class="project-description">@Description</p>

    <div class="project-links">
        <a href="@GitHubLink" target="_blank" rel="noopener noreferrer" class="project-link">
            View on GitHub
        </a>

        @if (LiveDemoActive && !string.IsNullOrWhiteSpace(LiveDemo))
        {
            <a href="@LiveDemo" target="_blank" rel="noopener noreferrer" class="project-link live-demo">
                Live Demo
            </a>
        }
        else
        {
            <button class="project-link live-demo disabled" disabled title="Live demo not available">
                Live Demo
            </button>
        }
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; }
    [Parameter] public string Description { get; set; }
    [Parameter] public string ImageUrl { get; set; }
    [Parameter] public string GitHubLink { get; set; }
    [Parameter] public string LiveDemo { get; set; }
    [Parameter] public bool LiveDemoActive { get; set; } = false;
}

<style>
    .project-card {
        background-color: var(--card-bg);
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        padding: 1rem;
        max-width: 320px;
        display: flex;
        flex-direction: column;
        gap: 1rem;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .project-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.15);
        }

    .project-image {
        width: 100%;
        height: 180px;
        object-fit: cover;
        border-radius: 6px;
    }

    .project-title {
        font-size: 1.25rem;
        font-weight: 700;
        margin: 0;
        color: var(--text-primary);
    }

    .project-description {
        font-size: 1rem;
        color: var(--text-secondary);
        flex-grow: 1;
    }

    .project-links {
        display: flex;
        gap: 1rem;
    }

    .project-link {
        align-self: flex-start;
        padding: 0.5rem 1.25rem;
        background-color: var(--btn-bg);
        color: var(--btn-text);
        border-radius: 4px;
        text-decoration: none;
        font-weight: 600;
        transition: background-color 0.3s ease;
        cursor: pointer;
        border: none;
    }

        .project-link:hover {
            background-color: var(--btn-bg-hover);
        }

        .project-link.live-demo {
            background-color: #28a745; /* green */
            color: white;
        }

            .project-link.live-demo:hover {
                background-color: #218838;
            }

            .project-link.live-demo.disabled {
                background-color: #6c757d; /* gray */
                cursor: not-allowed;
                pointer-events: none;
                color: #ddd;
            }
</style>
